<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".modul.order.OrderFragment"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="120dp"
        android:id="@+id/ivLogo"
        android:src="@drawable/ic_empty_order"
        android:layout_width="200dp"
        android:layout_height="201dp" />

    <TextView
        style="@style/Heading"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hah Kosong!"/>

    <TextView
        style="@style/Textview20dp.sub"
        android:layout_marginTop="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keranjangmu belum ada isinya nih"
        android:textAlignment="center"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cari Makanan"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:background="@drawable/recta"/>
</LinearLayout>